{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["asnext"],
  "ts-node": {
    "esm": true
  }
}
